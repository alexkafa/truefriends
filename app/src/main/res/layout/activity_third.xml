<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011250"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/teamBScoreTextView"
        android:layout_width="167dp"
        android:layout_height="34dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="22dp"
        android:text="@string/team_b_12"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/gossip"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/imageButton8"
        app:srcCompat="@drawable/gossip_icon" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/truefriends"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton7"
        app:srcCompat="@drawable/true_friend_icon" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="232dp"
        android:contentDescription="@string/dates"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dates_icon" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/hoppesndreams"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton7"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        app:srcCompat="@drawable/hopes_dreams_icon" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/binary"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton9"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/binary_icon" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="232dp"
        android:contentDescription="@string/names"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/names" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/ancienthistory"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5"
        app:srcCompat="@drawable/ancient_history_icon" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/hobbies"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton1"
        app:srcCompat="@drawable/hobbies" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="232dp"
        android:contentDescription="@string/top5"
        android:onClick="showQuestion"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top5_icon" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="16dp"
        android:onClick="cancel"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton9"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="333dp"
        android:layout_height="36dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="monospace"
        android:text="Team Name"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="Total Score :"
        android:textColor="#F8FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/teamAScoreTextView"
        android:layout_width="167dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:text="Team A: 10"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>
